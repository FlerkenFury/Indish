<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/image_plus"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_person_orange_24dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/plus_button"
            android:layout_alignBottom="@+id/profile_picture"
            android:layout_alignRight="@+id/profile_picture"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Stephen Leonardo"
        android:textColor="@android:color/black"
        android:layout_below="@+id/image_plus"
        android:gravity="center_horizontal"
        android:id="@+id/name_person"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_person"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/btn_change_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="change username"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn_change_pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="change password"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_change_name"
        />

        ></RelativeLayout>

</RelativeLayout>